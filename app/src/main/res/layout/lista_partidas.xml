<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/lContenedor"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="5dp">

    <LinearLayout
        android:id="@+id/lFecha"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center|center_horizontal"
        android:gravity="center|center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tFecha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="30-09-1988"
            android:textAlignment="center" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/lContjug"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center|center_horizontal"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:id="@+id/tJugador1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nombre 1" />

            <TextView
                android:id="@+id/tJugador2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nombre 2" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:id="@+id/tPuntos1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Puntos 1" />

            <TextView
                android:id="@+id/tPuntos2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Puntos 2" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:id="@+id/tJugador3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nombre 3" />

            <TextView
                android:id="@+id/tJugador4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nombre 4" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:id="@+id/tPuntos3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Puntos 3" />

            <TextView
                android:id="@+id/tPuntos4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Puntos 4" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/lConejo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="46dp"
            android:layout_height="30dp"
            app:srcCompat="@drawable/conejo" />
    </LinearLayout>

</LinearLayout>