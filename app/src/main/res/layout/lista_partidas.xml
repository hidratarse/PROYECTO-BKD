<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/lContenedor"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="5dp">

    <LinearLayout
        android:id="@+id/lFecha"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center|center_horizontal"
        android:gravity="center|center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tFecha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:fontFamily="@font/enchanted_land"
            android:textSize="20sp"/>
        />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/lContjug"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center|center_horizontal"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:id="@+id/tJugador1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/enchanted_land"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tJugador2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/enchanted_land"
                android:textSize="20sp"/>
            />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:id="@+id/tPuntos1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/enchanted_land"
                android:textSize="20sp"/>
            />

            <TextView
                android:id="@+id/tPuntos2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/enchanted_land"
                android:textSize="20sp"/>
            />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:id="@+id/tJugador3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/enchanted_land"
                android:textSize="20sp"/>
            />

            <TextView
                android:id="@+id/tJugador4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/enchanted_land"
                android:textSize="20sp" />
            />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:id="@+id/tPuntos3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/enchanted_land"
                android:textSize="20sp" />
            />

            <TextView
                android:id="@+id/tPuntos4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/enchanted_land"
                android:textSize="20sp" />
            />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/lConejo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="46dp"
            android:layout_height="30dp"
            app:srcCompat="@drawable/conejo" />
    </LinearLayout>

</LinearLayout>