<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00FFFFFF"
    android:backgroundTint="#00FFFFFF">

    <LinearLayout
        android:id="@+id/lPergamino"
        android:layout_width="315dp"
        android:layout_height="231dp"
        android:background="#00FFFFFF"
        android:backgroundTint="#00FFFFFF"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="230dp"
            android:background="#00FFFFFF"
            android:backgroundTint="#00FFFFFF"
            android:foregroundGravity="center_horizontal">

            <ImageView
                android:id="@+id/imgPergaPuntos"
                android:layout_width="match_parent"
                android:layout_height="231dp"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/pergamino" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="224dp"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="30dp" />

                <TextView
                    android:id="@+id/tTituloPer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#00FF5722"
                    android:fontFamily="@font/enchanted_land"
                    android:text="Puntos de pergamino"
                    android:textAlignment="center"
                    android:textColor="#FF5722"
                    android:textSize="40dp" />

                <EditText
                    android:id="@+id/ePuntosPergamino"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#00FFFFFF"
                    android:ems="10"
                    android:fontFamily="@font/enchanted_land"
                    android:gravity="top"
                    android:hint="Puntos"
                    android:inputType="number"
                    android:textAlignment="center"
                    android:textSize="34sp" />

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="85dp"
                    android:layout_gravity="center|center_horizontal">

                    <ImageButton
                        android:id="@+id/bPuntosPerga"
                        android:layout_width="match_parent"
                        android:layout_height="95dp"
                        android:backgroundTint="#00FFFFFF"
                        android:scaleType="centerInside"
                        app:srcCompat="@drawable/sello1" />

                    <TextView
                        android:id="@+id/tAceptarPuntos"
                        android:layout_width="match_parent"
                        android:layout_height="94dp"
                        android:fontFamily="@font/enchanted_land"
                        android:gravity="center|center_vertical"
                        android:text="@string/Aceptar"
                        android:textColor="#FFC107"
                        android:textSize="24sp" />

                </FrameLayout>

            </LinearLayout>

        </FrameLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>